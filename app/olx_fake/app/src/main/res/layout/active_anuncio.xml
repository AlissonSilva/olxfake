<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.anuncio.ActiveAnuncio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/active_anuncio"
        >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAnuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        app:title="Anúncio"
        app:titleTextColor="#FFF"
        android:theme="@style/ToolBarTheme.ToolBarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />


    <ImageView
        android:id="@+id/imgAnuncioAct"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAnuncio" />

    <TextView
        android:id="@+id/txtDtPublicaoAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="start|center"
        android:text="Publicado em 23/12"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloAnuncioAct"
        tools:layout_editor_absoluteX="1dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/txtDtPublicaoAct"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/txtDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="start|center"
        android:text="Descrição"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/txtTituloAnuncioAct"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="start|center"
        android:text="Anuncio Teste"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txtValorAct"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/txtTelefone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="start|center"
        android:text="(62) 3243-3243"
        app:layout_constraintTop_toBottomOf="@+id/txtDescricaoAct"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/txtValorAct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="start|center"
        android:text="R$ 135"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imgAnuncioAct"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/txtDescricaoAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:text="teste teste teste teste teset etste "
        app:layout_constraintTop_toBottomOf="@+id/txtDescricao"
        tools:layout_editor_absoluteX="1dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>