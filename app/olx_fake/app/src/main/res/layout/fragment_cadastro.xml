<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <EditText
        android:id="@+id/imganunciocadastro"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center|start"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="URL Imagem *" />

    <EditText
        android:id="@+id/idtitulocadastro"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center|start"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="Título *" />

    <EditText
        android:id="@+id/iddescricaocadastro"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center|start"
        android:hint="Descrição *" />


    <EditText
        android:id="@+id/idvalorcadastro"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center|start"
        android:inputType="numberDecimal"
        android:hint="Valor *" />

    <EditText
        android:id="@+id/idtelefone1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center|start"
        android:inputType="phone"
        android:hint="Primeiro Telefone  *" />

    <EditText
        android:id="@+id/idtelefone2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center|start"
        android:inputType="phone"
        android:hint="Segundo Telefone  *" />

    <Button
        android:id="@+id/btnenviarcadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorAccent"
        android:text="Enviar"
        android:textColor="@color/textSnackbar" />


</LinearLayout>