<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout"
        >

        <ImageView
            android:id="@+id/imgAnuncio"
            android:layout_width="120dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0sp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/txtTituloAnuncio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxEms="20"
            android:layout_toEndOf="@id/imgAnuncio"
            android:text="Vw Fox Prata 2012 / 2013"
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/txtPreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTituloAnuncio"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/imgAnuncio"
            android:text="25.000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_publicacao"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@id/txtPreco"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_toEndOf="@id/imgAnuncio"
            android:text="16 dezembro 22:55"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>